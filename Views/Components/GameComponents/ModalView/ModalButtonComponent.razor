    else if (Icon == "Stop")
    {
        <svg xmlns="http://www.w3.org/2000/svg" width="@Size" height="@Size" fill="currentColor" class="bi bi-stop-circle" viewBox="0 0 16 16">
            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
